<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#388E3C"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <!--
        <Button
            android:id="@+id/user_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#ffffffff"
            android:gravity="left|center_vertical"
            android:padding="2dp"
            android:text="@string/userinfo"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:layout_marginTop="8dp"
            android:id="@+id/diyButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text="@string/diy"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:textStyle="bold" />
        -->
        <Button
            android:id="@+id/suggestionButton"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="建议与反馈"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/updataButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text="@string/updata"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/clearButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="清除账户"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/developerButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text="@string/developer"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:textStyle="bold" />

        <View
            android:background="#B6B6B6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffffff">

            <TextView
                android:id="@+id/student_type"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:background="#ffffffff"
                android:gravity="center_vertical"
                android:text="@string/currenSystem"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student_type_value"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignBaseline="@+id/student_type"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/student_type"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_below="@+id/student_type"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:background="#ffffffff"
                android:text="@string/currenUser"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student_name_value"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignBaseline="@+id/student_name"
                android:layout_below="@+id/student_type_value"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/student_name"
                android:textSize="16sp" />

            <!--<Button
                android:id="@+id/sureButton"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="1dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:text="@string/sure" />-->
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
